{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    }
}